<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/education_root_maring"
        android:layout_marginLeft="@dimen/education_root_maring"
        android:layout_marginRight="@dimen/education_root_maring"
        android:layout_weight="9">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/education_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/education_root_maring"
        android:layout_marginRight="@dimen/education_root_maring"
        android:gravity="bottom"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/education_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tBack"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="true"
                android:textColor="@color/black"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/education_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tNext"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"

                android:textAllCaps="true"
                android:textColor="@color/black"
                tools:ignore="ContentDescription,RtlHardcoded" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
